/**index.wxss**/
.swiper_box {
    width: 100%;
    height: 350rpx;
    margin: 0 auto;
    margin-top: 5rpx;
    margin-bottom: 5rpx;
}

.swiper_box swiper {
    width: 98%;
    height: 350rpx;
    margin: 0 auto;
}

.swiper_box image {
    width: 100%;
    height: 100%;
    border-radius: 16rpx;
}
.van-notice-bar .van-icon{
    width: 60rpx;
    height: 60rpx;
}
.grids {
    display: flex;
    justify-content: space-around;
    margin: 0 auto;
    width: 100%;
    margin-top: 10rpx;
}

.grids .grid_item {
    width: 23%;
    margin: 0 auto;
    background-color: #FFFFFF;
    border-radius: 20rpx;

}

.grids .grid_item image {
    margin: 0 auto;
    display: block;
    padding: 15rpx;
    width: 150rpx;
    height: 150rpx;
    border-radius: 16rpx;
}

.grids .grid_item text {
    display: block;
    text-align: center;
    font-size: 33rpx;
    padding: 3rpx;
}

.grids_box {
    width: 98%;
    margin: 0 auto;
    background-color: #fff;
    border-radius: 22rpx;
}

.grids_box .title {
    padding-top: 10rpx;
    padding-left: 35rpx;
    font-size: 35rpx;
    font-weight: 650;
}

.info {
    display: flex;
    width: 100%;
    display: flex;
    margin: 0 auto;
    align-items: center;
    justify-content: space-evenly;
    margin-top: 10rpx;
    padding-bottom: 20rpx;
}

.info .comm {
    width: 48%;
    background-color: #FFFFFF;
    border-radius: 12rpx;

}

.info .left {
    display: flex;
    justify-content: space-around;
    height: 180rpx;
}

.info .left .want {
    display: block;
    padding-left: 20rpx;
    margin-top: 20rpx;
    font-size: 35rpx;
    font-weight: 600;
    font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
}

.left .info_icon {
    width: 170rpx;
    height: 60rpx;
    border-radius: 80rpx;
    background-color: #FDE2E9;
    margin-left: 20rpx;
    margin-bottom: 10rpx;
    margin-top: 15rpx;
}

.left .info_icon text {
    padding: 10rpx;
    color: #D55E5C;
    line-height: 60rpx;
    font-size: 25rpx;
    margin-left: 5rpx;
}

.info .left image {
    margin-top: 20rpx;
    width: 36%;
    height: 140rpx;
}

/* 新闻bar */
.school_news_bar {
    width: 98%;
    margin: 0 auto;
    margin-top: 10rpx;
}

.school_news_bar .cu-bar {
    display: flex;
    align-items: center;
    justify-content: left;
    border-radius: 16rpx;
}

.school_news_bar .cu-bar .right_more {
    font-size: 30rpx;
    margin-right: 30rpx;
}

.school_news_bar .news_box {
    display: flex;
    align-items: center;
    justify-content: space-around;
    background-color: #fff;
    margin-top: 5rpx;
    border-radius: 16rpx;
    height: 160rpx;
    margin-bottom: 5rpx;
}

.news_box .left {
    position: relative;
    width: 75%;
    margin-left: 15rpx;
    margin-right: 10rpx;
    height: 120rpx;
}

.news_box .left .left_top_desc {
    font-size: 30rpx;
    color: #444;
    margin-bottom: 10rpx;
    /* 显示两行 */
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;

}

.news_box .left .left_bottom_desc {
    display: flex;
    align-items: center;
    color: #999;
    font-size: 28rpx;
    position: absolute;
    left: 0;
    bottom: -10rpx;
}

.left .left_bottom_desc .send_time {

    margin-left: 20rpx;
}

.news_box .right {
    width: 25%;
    margin-left: 10rpx;
}

.news_box .right image {
    width: 160rpx;
    height: 130rpx;
    border-radius: 12rpx;
}