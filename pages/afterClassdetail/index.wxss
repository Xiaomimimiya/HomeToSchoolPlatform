.class_desc {
    display: flex;
    background-color: #E0EEFF;
    height: 280rpx;
}

.class_desc .left_image {
    width: 350rpx;
    height: 250rpx;
    margin-left: 20rpx;
}

.class_desc .left_image image {
    width: 100%;
    height: 100%;
    border-radius: 22rpx;
}

.class_desc .right_content {
    margin-left: 30rpx;
    margin-top: 10rpx;
}

.right_content .name {
    font-size: 40rpx;
    color: #262626;
    font-weight: 600;
}

.right_content .time {
    margin-top: 10rpx;
    font-size: 30rpx;
    color: rgb(94, 94, 94);
}

.right_content .people {
    margin-top: 10rpx;
    color: gray;
    margin-bottom: 10rpx;
}

.right_content .sub_botton {
    margin-top: 10rpx;
    width: 200rpx;
    height: 50rpx;

}

.right_content .sub_botton button {
    font-size: 25rpx !important;
    background-color: #0baeff;
    color: black;
}

.van-cell__title {
    font-size: 30rpx;
    font-weight: 700;
}

/* 学习反馈 */

.message_wall {
    margin-top: 3rpx;
    background-color: rgb(255, 255, 255);
    padding-bottom: 20rpx;
}

.top_info {
    display: flex;
    align-items: center;
}

.top_info .avatar image {
    margin-left: 30rpx;
    margin-top: 15rpx;
    width: 60rpx;
    height: 60rpx;
}

.top_info .username {
    margin-left: 30rpx;
    font-size: 30rpx;
    color: black;
}

.top_info .rate_content {
    margin-left: 15rpx;
}

.top_info .send_time {
    position: absolute;
    right: 30rpx;
}

.middle_content {
    margin: 0 auto;
    width: 94%;
    background-color: rgb(247, 247, 247);
    padding: 10rpx;
    border-radius: 22rpx;
    margin-bottom: 10rpx;
}
.rate_choose{
    display: flex;
    align-items: center;
    font-size: 35rpx;
}
.rate_choose text{
    margin-left: 30rpx;
    font-weight: 700;

}
/* 课程介绍 */
.detail{
    background-color: #fff;
    margin-top: 10rpx;
  
}
.detail .wxprase text{
    padding: 10rpx;
}