.class_box {
    width: 100%;
    margin: 0 auto;
    margin-top: 20rpx;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    margin-bottom: 20rpx;
}

.class_box .class_item {
    width: 47%;
    border-radius: 16rpx;
    background-color: #FFFFFF;
    margin-bottom: 15rpx;
    margin-left: 10rpx;
    margin-right: 10rpx;
    box-shadow: 4rpx 8rpx 8rpx rgba(233, 225, 225, 0.3);
}
.class_item .top_content image {
    width: 100%;
    height: 300rpx;
    padding: 20rpx;
    border-top-left-radius: 16rpx;
    border-top-right-radius: 16rpx;
}

.class_item .middle_content {

    margin-left: 25rpx;
    margin-right: 10rpx;
    margin-bottom: 15rpx;
}

.class_item .middle_content .class_name {
    font-size: 30rpx;
    font-family: serif;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.class_item .middle_content .class_desc{
    font-size: 25rpx;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
    color: #838383;
    font-family: serif;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.class_item .middle_content .choose{
    display: flex;
    justify-content:space-between;
    font-size: 22rpx;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
    color: #838383;
}