/* 提交按钮 */

.submit_box {
    padding: 10rpx;
    position: fixed;
    right: 0rpx;
    bottom: 100rpx;
    background-color: #ffffff;
    border-radius: 16rpx;

}

.submit_box .upload image {
    width: 80rpx;
    height: 80rpx;
}

.submit_box .upload view {
    font-size: 30rpx;
    text-align: center;
}