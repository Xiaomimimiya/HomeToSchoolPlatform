page {
    background-color: #E5E7F4;
}

.top_info {
    background-color: #fff;
    width: 96%;
    margin: 0 auto;
    margin-top: 20rpx;
    border-radius: 20rpx;
}

.top_info .userInfo {
    display: flex;
    align-items: center;

}

.top_info .userInfo .avatar {
    margin-left: 30rpx;
    margin-top: 15rpx;
}

.userInfo .avatar image {
    width: 100rpx;
    height: 100rpx;
}

.top_info .userInfo .username {
    margin-left: 30rpx;
}

.userInfo .username .name {
    font-size: 40rpx;
    color: #7171C1;
}

.userInfo .username .classname {
    font-size: 30rpx;
    color: #bcbce0;

}

.chat_info {
    margin-top: 20rpx;
    margin-left: 30rpx;
    color: #bcbce0;
    display: flex;
    align-items: center;
}

.chat_info .time {
    font-size: 35rpx;
}

.chat_info .userClick {
    display: flex;
    position: absolute;
    right: 50rpx;
    font-size: 40rpx;
}

.userClick .good text {
    margin-left: 10rpx;
}

.userClick .comment {
    margin-left: 15rpx;
}

.userClick .comment text {
    margin-left: 10rpx;
}

.content_info {
    margin-left: 30rpx;
    padding-bottom: 15rpx;
}

.content_info .chat_content {
    padding-top: 35rpx;
    color: #222;
    font-size: 40rpx;
    padding-bottom: 10rpx;
}

.image_box {
    width: 96%;
    display: flex;
    margin: 0 auto;
    padding-bottom: 30rpx;
    margin-top: 10rpx;
    justify-content: space-between;
}

.image_box image {
    width: 48%;
    height: 320rpx;

    border-radius: 20rpx;

}

.bottom_info {
    background-color: #fff;
    width: 96%;
    margin: 0 auto;
    margin-top: 20rpx;
    border-radius: 20rpx;
    margin-bottom: 30rpx;
}

.bottom_info .top_title {
   
    margin-left: 20rpx;
    display: flex;
    align-items: center;
    padding-bottom: 10rpx;
    height: 70rpx;

}

.bottom_info .top_title image {
    margin-top: 10rpx;
    padding-bottom: 10rpx;
    width: 65rpx;
    height: 65rpx;
}

.top_title .title {
    margin-left: 30rpx;
    margin-top: 5rpx;
    font-size: 40rpx;
    color: #6F74C0;
    line-height: 70rpx;
}

.comment_list {
    margin-top: 30rpx;
    margin-left: 30rpx;
    padding-bottom: 15rpx;
}

.comment_list .userinfo {
    display: flex;
    align-items: center;
    height: 80rpx;
}

.comment_list .userinfo .avatar image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;

}

.comment_list .userinfo .username {
    margin-left: 30rpx;
    font-size: 35rpx;
    color: #32a7ff;
    line-height: 80rpx;
}

.comment_list .userinfo .time {
    margin-left: 30rpx;
    font-size: 35rpx;
    color: #999;
    line-height: 80rpx;
}

.comment_list .comment_content {
    margin-top: 30rpx;
    margin-left: 30rpx;
    font-size: 30rpx;
    margin-right: 30rpx;
    padding-bottom: 10rpx;
}

.comment_list .comment_content text {
    color: #333;

}

/* 底部 */
.fix_bottom_box {
    position: fixed;
    bottom: 0;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-evenly;
    background-color: #fff;
}

.fix_bottom_box .left_input_content {
    width: 80%;
}

.left_input_content .input_box {
    background-color: #F5F5F5;
    margin-left: 10rpx;
    padding: 20rpx;
    border-radius: 22rpx;
}

.fix_bottom_box .right_click {
  
    width: 20%;
   
}

.fix_bottom_box .right_click image {
    width: 100rpx;
    height: 100rpx;
    margin-left: 10rpx;
    padding: 10rpx;
}

.van-popup {
    border-radius: 22rpx;
}
textarea{
    background-color: #f5f5f5;
    border-radius: 22rpx;
    height: 340rpx !important;
}
.buttons {
    position: relative;
}

.buttons button {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
}