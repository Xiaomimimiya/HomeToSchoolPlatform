/* 新闻内容 */
.news_box {
    display: flex;
    align-items: center;
    justify-content: space-around;
    background-color: #fff;
    margin-top: 5rpx;
    border-radius: 16rpx;
    height: 160rpx;
    margin-bottom: 5rpx;
}

.news_box .left {
    position: relative;
    width: 75%;
    margin-left: 15rpx;
    margin-right: 10rpx;
    height: 120rpx;
}

.news_box .left .left_top_desc {
    font-size: 30rpx;
    color: #444;
    margin-bottom: 10rpx;
    /* 显示两行 */
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;

}

.news_box .left .left_bottom_desc {
    display: flex;
    align-items: center;
    color: #999;
    font-size: 28rpx;
    position: absolute;
    left: 0;
    bottom: -10rpx;
}

.left .left_bottom_desc .send_time {

    margin-left: 20rpx;
}

.news_box .right {
    width: 25%;
    margin-left: 10rpx;
}

.news_box .right image {
    width: 160rpx;
    height: 130rpx;
    border-radius: 12rpx;
}
/* 志愿服务 */
.box {
    width: 98%;
    margin: 0 auto;
    margin-top: 10rpx;
}

.box_item {
    width: 100%;
    background-color: #fff;
    border-radius: 20rpx;
    display: flex;
    margin-bottom: 10rpx;
}

.box_item .left {
    width: 40%;
}

.box_item .left image {
    width: 300rpx;
    height: 220rpx;
    margin-top: 15rpx;
    margin-left: 10rpx;
    border-radius: 20rpx;
}

.box_item .right {
   
    margin-left: 35rpx;
}

.right .title {
    margin-top: 10rpx;
    font-size: 40rpx;
    font-weight: 700;
}

.right .number{
    margin-top: 5rpx;
    
    font-size: 35rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:1;
    overflow: hidden;

    /* 使用省略号代替多余的文字 */
    text-overflow: ellipsis;
    color: #666666;
}

.right .goDetail {
    padding: 10rpx;
}