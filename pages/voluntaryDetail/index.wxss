/* 轮播图 */
swiper {
    width: 96%;
    margin: 0 auto;
    height: 500rpx;
    background-color: #fff;
    border-radius: 16rpx;
    margin-top: 10rpx;
}

swiper-item image {
    width: 100%;
    height: 100%;
    padding: 20rpx;
    border-radius: 16rpx;
}

.content_box {
    width: 96%;
    margin: 0 auto;
    background-color: #fff;
    margin-top: 15rpx;
    border-radius: 16rpx;
}

/* 商品信息区域 */
.good_root {
    padding: 10rpx;
}

.good_title {
    font-weight: 500;
    width: auto;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    word-wrap: normal;
    word-wrap: break-word;
    word-break: break-all;
    font-size: 45rpx;
    margin-top: 10rpx;
    color: black;
    margin-left: 20rpx;
    margin-bottom: 10rpx;
}

.location {
    margin-left: 20rpx;

    font-size: 33rpx;
    color: #000;
    margin-bottom: 20rpx;
}

.location .locations {
    margin-left: 15rpx;

}

.bottom button {
    margin-left: 40rpx !important;
}



/* 横线 */
.border-line {
    width: 100%;
    height: 1rpx;
    display: inline-block;
    margin: 30rpx 0rpx;
    background-color: rgb(240, 240, 240);
    text-align: center;
    margin-top: 5rpx;
}


/* 发布时间 */
.good_time {
    margin-left: 20rpx;
    padding-left: 15rpx;
    font-size: 33rpx;
    color: #000;
    margin-bottom: 20rpx;
}

.good_phone {
    margin-left: 20rpx;
    padding-left: 15rpx;
    font-size: 33rpx;
    color: black;
    margin-bottom: 20rpx;
    margin-left: 15rpx;
}

/* 发布地址 */
.good_adress {
    padding-left: 50rpx;
    font-size: 33rpx;
    color: gray;
    margin-bottom: 20rpx;

}




/* 商品描述 */
.good_content {
    margin-left: 25rpx;
    margin-right: 25rpx;
    font-size: 32rpx;
    color: rgb(0, 0, 0);
    padding-bottom: 20rpx;
}

.apply_box{
    width: 96%;
    margin: 0 auto;
    background-color: #fff;
    margin-top: 15rpx;
    border-radius: 16rpx;
}
.apply_box .apply_list{
    margin-left: 30rpx;
    font-size: 30rpx;
    padding-bottom: 20rpx;
    padding-top: 10rpx;
}
.apply_box .good_root .good_name{
    margin-left: 20rpx;
    font-size: 40rpx;
    font-weight: 400;
    color: #333;
}
.bottom {
    width: 96%;
    margin: 0 auto;

    margin-top: 20rpx;
    padding-bottom: 20rpx;
}

.bottom .cu-bar {
    border-radius: 20rpx;
}
.select{
    margin-right: 50rpx;
}