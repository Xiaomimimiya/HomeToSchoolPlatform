page {
    background-color: #262834;
}

.video_box {
    width: 100%;
    height: 400rpx;
}

.video_box video {
    width: 100%;
    height: 100%;
}

.top_content .title {
    font-size: 45rpx;
    margin-top: 35rpx;
    margin-left: 30rpx;
    color: #FCFEFE;
    font-weight: 700;
}
.detail {
    padding: 20rpx;
    background-color: rgb(245, 245, 245);
    border-radius: 20rpx;
}

.desc {
    display: flex;
    align-items: center;
    color: #c5c5c5;
    margin-left: 30rpx;
    font-size: 35rpx;
    margin-top: 10rpx;
}

.desc .send_name {
    margin-left: 25rpx;
}

.see_box{
    font-size: 35rpx;
    margin-left: 30rpx;
}

.border-line {
    width: 100%;
    height: 1rpx;
    display: inline-block;

    background-color: rgb(131, 131, 131);
    text-align: center;
    margin-top: 5rpx;
}

.middle_content .title {
    font-size: 40rpx;
    margin-top: 25rpx;
    margin-left: 30rpx;
    color: #FCFEFE;
    font-weight: 700;
    margin-bottom: 10rpx;
}
.click{
    display: flex;
    align-items: center;
    margin-top: 15rpx;
}
.comment_send_box {

    width: 92%;
    margin: 0 auto;
}

.comment_send_box .cu-form-group {
    height:200rpx;
    border-radius: 20rpx;
    background-color: #626680;
}

.comment_send_box button {
    margin-right: 10rpx !important;
}


.comment {
    font-size: 35rpx;
    margin-top: 10rpx;
    margin-left: 30rpx;
    color: #FCFEFE;
    font-weight: 700;
    margin-bottom: 10rpx;
}

.comment_list .top_content {
    display: flex;
    margin-left: 30rpx;
}
.top_content .avatar image{
    width: 50rpx;
    height: 50rpx;
}

/* 评论内容 */
.comment_list {
    margin-top: 30rpx;
    margin-left: 30rpx;
    padding-bottom: 15rpx;
}

.comment_list .userinfo {
    display: flex;
    align-items: center;
    height: 80rpx;
}

.comment_list .userinfo .avatar image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}

.comment_list .userinfo .username {
    margin-left: 30rpx;
    font-size: 35rpx;
    color: #32a7ff;
    line-height: 80rpx;
}
.comment_list .userinfo .time {
    margin-left: 30rpx;
    font-size: 35rpx;
    color: #999;
    line-height: 80rpx;
}
.comment_list .comment_content {
    margin-top: 30rpx;
    margin-left: 30rpx;
    font-size: 30rpx;
    margin-right: 30rpx;
    padding-bottom: 10rpx;
}

.comment_list .comment_content text {
    color: #FCFEFE;

}

.submit_box {
    color: white;
    padding: 10rpx;
    position: fixed;
    right: 15rpx;
    bottom: 100rpx;
    border-radius: 16rpx;
    background-color: #8aa9b3;

}
.submit_box .upload image {
    width: 100rpx;
    height: 100rpx;

}

.submit_box .upload view {
    font-size: 30rpx;
    text-align: center;
}
