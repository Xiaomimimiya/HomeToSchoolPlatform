.van-popup {
    border-radius: 22rpx;
}

/* 领导配餐 */
.header_food_box {
    width: 98%;
    margin: 0 auto;
    margin-bottom: 10rpx;

    border-radius: 22rpx;
    display: flex;
    align-items: center;
    justify-content: space-around;
}

.header_food_box .left_image {
    width: 20%;
    margin-left: 10rpx;
    margin-top: 10rpx;
}

.header_food_box .left_image image {
    width: 80rpx;
    height: 80rpx;
}

.header_food_box .middle_content {
    width: 40%;
}

.header_food_box .middle_content .top_name {
    font-size: 30rpx;
    font-weight: 650;
    color: #333;
}

.header_food_box .middle_content .middle_time {
    font-size: 30rpx;
    font-weight: 650;
    color: #333;
}

.header_food_box .left_position button {
    width: 150rpx;
    height: 60rpx;
}

/* 食谱信息 */
.food_box {
    width: 98%;
    margin: 0 auto;

}

.food_box .food_box_item {
    display: flex;
    align-items: center;
    margin-top: 5rpx;

    border-radius: 22rpx;
    background-color: #fff;
}

.food_box .food_box_item .left_image {
    width: 25%;
    margin-left: 10rpx;
}

.food_box_item .left_image image {
    width: 120rpx;
    height: 120rpx;
    border-radius: 22rpx;
}

.food_box_item .middle_content {
    width: 50%;
}

.food_box_item .middle_content .top_title {
    font-size: 35rpx;
}

.food_box_item .middle_content .middle_detail {
    color: #015799;
    margin-top: 5rpx;
}

.food_box_item .left_time {
    width: 25%;
    font-size: 30rpx;
}


/* 内容盒子 */
.content_box {
    margin: 0 auto;
    margin-top: 10rpx;
    width: 98%;
}

.cu-list {
    border-radius: 22rpx;
}

.grid_images image {
    width: 120rpx;
    height: 120rpx;
}

.grid_text {
    font-size: 40rpx;
    font-weight: 650;
}

/* 宿舍个人信息 */
.accomoda_info_box {
    width: 90%;
    margin: 0 auto;
    margin-top: 50rpx;
    margin-right: 50rpx;
}

/* 优秀宿舍 */
.best_acc {
    display: flex;
    justify-content: space-between;
    margin-top: 8rpx;
}

.best_acc_box {
    width: 19%;
    padding-top: 5rpx;
    padding-bottom: 5rpx;
    background-color: #fff;
    border-radius: 22rpx;
    margin-left: 5rpx;
}

.best_acc .acc_item image {
    width: 95%;
    height: 150rpx;
    padding: 5rpx;
}

.best_acc .acc_item text {
    display: block;
    text-align: center;
    font-weight: 700;
    font-size: 25rpx;
    margin-bottom: 10rpx;
}

.cu-item {
    padding: 0 !important;
    width: 50% !important;
}

/* 通知列表 */
/* 新闻内容 */
.news_box {
    display: flex;
    align-items: center;
    justify-content: space-around;
    background-color: #fff;
    margin-top: 5rpx;
    border-radius: 16rpx;
    height: 160rpx;
    margin-bottom: 5rpx;
}

.news_box .left {
    position: relative;
    width: 75%;
    margin-left: 15rpx;
    margin-right: 10rpx;
    height: 120rpx;
}

.news_box .left .left_top_desc {
    font-size: 30rpx;
    color: #444;
    margin-bottom: 10rpx;
    /* 显示两行 */
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;

}

.news_box .left .left_bottom_desc {
    display: flex;
    align-items: center;
    color: #999;
    font-size: 28rpx;
    position: absolute;
    left: 0;
    bottom: -10rpx;
}

.left .left_bottom_desc .send_time {

    margin-left: 20rpx;
}

.news_box .right {
    width: 25%;
    margin-left: 10rpx;
}

.news_box .right image {
    width: 160rpx;
    height: 130rpx;
    border-radius: 12rpx;
}
/* 通知详情内容 */
.notice_box {
    margin: 0 auto;
    margin-left: 20rpx;
    margin-bottom: 20rpx;
    margin-top: 20rpx;
    margin-right: 20rpx;

}
.notice_box .notice_title{
    text-align: center;
    font-size: 35rpx;
    font-weight: 700;
    margin-bottom: 20rpx;
}
/* 每周食谱弹出框 */
.recipe_box{
    width: 100%;
    margin: 0 auto;
}
.recipe_box .title {
    text-align: center;
    font-size: 35rpx;
    font-weight: 700;
    margin-bottom: 10rpx;
    margin-top: 20rpx;
}
.recipe_box image{
    width: 100%;
    padding: 10rpx;
}