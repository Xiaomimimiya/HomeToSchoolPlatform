/* 育人课程 */
.class_item {
    display: flex;
    margin: 0 auto;
    margin-top: 5rpx;
    width: 100%;
    box-sizing: border-box;
    flex-wrap: wrap;
    justify-content: space-between;
}

.class_item .title {
    padding-top: 15rpx;
    padding-left: 35rpx;
    font-size: 35rpx;
    font-weight: 650;
}

.class_item .comm {
    margin-top: 8rpx;
    margin-bottom: 10rpx;
    width: 48%;
    background-color: #FFF;
    border-radius: 16rpx;
    margin-left: 5rpx;
    margin-right: 5rpx;
}

.class_item .hot_icon image {
    border-top-left-radius: 16rpx;
    border-top-right-radius: 16rpx;
    width: 100%;
    height: 220rpx;
}

.class_item .hot_icon .class_title {
    display: block;
    font-size: 30rpx;
    margin-left: 10rpx;
    font-weight: 700;
    padding-bottom: 10rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    word-wrap: normal;
    word-wrap: break-word;
    word-break: break-all;
}
.hot_icon .bottom_content {
    display: flex;
}

.hot_icon .bottom_content .left {
   
    display: flex;
    align-items: center;
}

.bottom_content .left .send_name {
    display: block;

    margin-left: 10rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;

    /* 使用省略号代替多余的文字 */
    text-overflow: ellipsis;
}

.desc_class {
    margin-top: 10rpx;
    display: flex;
    justify-content: space-around;
    margin-bottom: 10rpx;
}

.desc_class .left .appreciate {
    margin-left: 10rpx;
    color: #999;
}

.desc_class .right {
    margin-left: 15rpx;
}

.desc_class .right .appreciate {
    margin-left: 10rpx;
    color: #999;
}

