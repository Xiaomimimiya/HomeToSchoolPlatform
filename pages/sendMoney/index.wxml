
<form catchsubmit="publish">
    <view class="cu-form-group">
        <view class="title">支出项目:</view>
        <input placeholder="支出项目" class="input" name="title"></input>
    </view>
    <view class="cu-form-group">
        <view class="title">支出金额（人民币）:</view>
        <input placeholder="支出金额" class="input" name="money"></input>
    </view>
    <view class="cu-form-group">
        <view class="title">支出时间:</view>
        <input placeholder="xxxx/xx/xx" class="input" name="time"></input>
    </view>
    <view class="cu-form-group align-start">
        <view class="title">支出描述：</view>
        <textarea name="desc" maxlength="-1" disabled="{{modalName!=null}}" placeholder="关于支出的详细描述"></textarea>
    </view>
    <view class="padding flex  flex-wrap ">
        <button class="cu-btn  bg-cyan shadow-blur flex-sub  margin-xs round" formType="reset">清空数据</button>
        <button class="cu-btn  bg-blue shadow-blur flex-sub   margin-xs  round" formType="submit">发布信息
        </button>
    </view>

</form>